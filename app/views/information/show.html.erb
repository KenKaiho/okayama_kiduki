<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">件名</div>
  <div class="panel-body"><%= @information.title %></div>
  <div class="panel-heading">URL</div>
  <div class="panel-body"><%= link_to @information.url,@information.url %></div>
  <div class="panel-heading">コメント：</div>
  <div class="panel-body"><%= @information.comment %></div>
</div>  
<span style="font-style:italic;font-size:8pt;">posted by ;
<%= if @information.user.present? then @information.user.email end %> &nbsp;
created;<%= @information.insert_time %>&nbsp;  updated;<%= @information.update_time %></span>
<%= link_to '情報を編集する', edit_information_path(@information) %>

<br><br>
<div class="panel panel-default">
  <div class="panel-body">
<h4>この情報に対する気づき</h4>
<ul class="list-group">
<% @awareness.each do |awareness| %>
<li class="list-group-item">
<b><%= awareness.title %></b>
<blockquote>
<span style="font-size:9pt;">情報ソース：<%= link_to awareness.source,awareness.url %><br>
SMSにとっての意味：<%= awareness.meaning %></span>
</blockquote>
<% end %>
</li>
</ul>
</div>
</div>
<div>
<button type="button" class="btn btn-warning btn-lg"><%= link_to '気づきを追加する', new_awareness_path(@information.id) %></button>
</div>
</div>
